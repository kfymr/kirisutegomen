<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/selector" />

    <ImageView
        android:id="@+id/pig"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/selector_pig"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="151dp"
        tools:visibility="visible"
        />
    <ImageView
        android:id="@+id/pig_animation"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/animation_pig_victory01"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="151dp"
        tools:visibility="invisible"
        />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_00_00"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_00_00"
        android:textSize="60sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />
<!--
    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        tools:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/text_view_countdown" />
-->
    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_text_view_countdown"
        tools:visibility="invisible"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="斬る！"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_countdown"
        tools:visibility="visible"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/shoji_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/blank01"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="151dp"
        tools:visibility="visible"
        />
    <ImageView
        android:id="@+id/shoji_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/blank01"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="151dp"
        tools:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>